<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dream_list_items"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:textDirection="rtl"
    android:layout_margin="8dp"
    android:background="#fff"
    android:padding="8dp">

    <TextView
        android:id="@+id/item_dream_owner_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:textColor="#000"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Ahmed Salem" />

    <TextView
        android:id="@+id/item_dream_date_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:layout_below="@id/item_dream_owner_textView"
        tools:text="22-09-2018" />

    <TextView
        android:id="@+id/dream_reply_status_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_below="@+id/item_dream_owner_textView"
        android:layout_toStartOf="@+id/item_dream_date_textView"
        tools:text="done" />

    <ImageView
        android:id="@+id/item_status_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        app:srcCompat="@mipmap/ic_launcher" />



</RelativeLayout>